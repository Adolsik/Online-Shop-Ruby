<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @przedmiot, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

          <div class="field column is-9">
            <div class="control">
              <%= f.input :title, label: "Nazwa przedmiotu: " , required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>

          <div class="field column">
            <div class="control">
              <%= f.input :price, label: "Cena:", required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>

        </div>

        <div class="columns">

        <div class="field column is-9">
          <div class="control">
            <%= f.input :model, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

          <div class="field column">
            <div class="control">
              <%= f.input :size, label: "Rozmiar:", required: true, input_html: { class:"input", maxlength: 4  }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :description, label: "Opis", required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

          
              
            

        <div class="columns">
          <div class="field column is-4">
            <div class="control">
              <label class="label">Marka</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :brand, collection: Przedmiot::BRAND, prompt: "Wybierz markę" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Stan</label>
              <div class="control has-icons-left">
                <span class="select">
                 <%= f.input_field :conditon, collection: Przedmiot::CONDITION, prompt: "Wybierz stan" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>
         </div>

        <div class="field">
          <div class="control">
            <label class="label">Dodaj zdjęcie</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input instrument-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Wybierz plik...</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, "Dodaj przedmiot", class: 'button is-warning' %>
            <%= link_to 'Anuluj', przedmiots_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>